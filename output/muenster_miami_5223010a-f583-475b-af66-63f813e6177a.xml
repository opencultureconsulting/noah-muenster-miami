                    <titleInfo lang="eng">
                        <title>Application of Kuhn’s theory of scientific revolution to the theory development of disruptive innovation</title>
                    </titleInfo>
                    <name type="personal">
                        <displayForm>Riesmeier, Marabel</displayForm>
                        <namePart type="given">Marabel</namePart>
                        <namePart type="family">Riesmeier</namePart>
