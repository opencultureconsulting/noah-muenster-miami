                    <titleInfo lang="eng">
                        <title>Refined Iwasawa theory for p-adic representations and the structure of Selmer groups</title>
                    </titleInfo>
                    <name type="personal" authority="gnd" authorityURI="http://d-nb.info/gnd/" valueURI="http://d-nb.info/gnd/112357104X">
